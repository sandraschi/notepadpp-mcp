{
  "name": "notepadpp-mcp",
  "version": "1.2.0",
  "description": "FastMCP 2.14.1 compliant Notepad++ automation server with 26 tools",
  "author": "Sandra Schi",
  "license": "MIT",
  "outputDir": "dist",
  "mcp": {
    "version": "2.14.1",
    "server": {
      "command": "python",
      "args": ["-m", "notepadpp_mcp.tools.server"],
      "transport": "stdio"
    },
    "capabilities": {
      "tools": true,
      "resources": false,
      "prompts": false
    }
  },
  "dependencies": {
    "python": ">=3.10.0",
    "fastmcp": ">=2.14.1,<2.15.0",
    "mcp": ">=1.0.0,<2.0.0",
    "pywin32": "311; platform_system=='Windows'"
  },
  "build": {
    "command": "python -m build",
    "outputDir": "dist"
  },
  "scripts": {
    "test": "python -m pytest",
    "lint": "ruff check src/ tests/",
    "format": "ruff format src/ tests/",
    "type-check": "python -m mypy src/"
  }
}
