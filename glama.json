{
  "$schema": "https://glama.ai/mcp/schemas/server.json",
  "mcpServers": {
    "notepadpp-mcp": {
      "command": "python",
      "args": ["-m", "notepadpp_mcp.tools.server"],
      "env": {
        "PYTHONPATH": "${PWD}",
        "PYTHONUNBUFFERED": "1"
      },
      "description": "FastMCP 2.14.1 compatible MCP server for Notepad++ automation, plugin management, and code quality analysis. 26 tools including plugin ecosystem integration with 1,400+ plugins.",
      "capabilities": {
        "tools": {
          "enabled": true
        },
        "resources": {
          "enabled": false
        },
        "prompts": {
          "enabled": false
        }
      },
      "timeout": {
        "initialize": 30000,
        "message": 60000
      },
      "metadata": {
        "version": "1.2.0",
        "author": "Sandra Schi",
        "homepage": "https://github.com/sandraschi/notepadpp-mcp",
        "license": "MIT",
        "tags": [
          "notepadpp",
          "text-editor",
          "windows",
          "automation",
          "plugins",
          "linting",
          "mcp-server",
          "fastmcp"
        ],
        "categories": [
          "text-editor",
          "automation",
          "code-quality",
          "windows"
        ]
      }
    }
  },
  "maintainers": ["sandraschi"],
  "name": "notepadpp-mcp",
  "description": "FastMCP 2.14.1 compatible MCP server for Notepad++ automation, plugin management, and code quality analysis. 26 tools including plugin ecosystem integration with 1,400+ plugins. Beta status.",
  "type": "mcp_server",
  "status": "beta",
  "framework": "FastMCP 2.14.1",
  "tools": 26,
  "transport": ["stdio"],
  "keywords": [
    "notepadpp",
    "text-editor",
    "windows",
    "automation",
    "plugins",
    "linting",
    "mcp-server",
    "fastmcp"
  ],
  "features": {
    "plugin_management": {
      "enabled": true,
      "ecosystem": "1400+ official plugins"
    },
    "code_linting": {
      "enabled": true,
      "languages": ["Python", "JavaScript", "JSON", "Markdown"]
    },
    "automation": {
      "enabled": true
    }
  }
}

